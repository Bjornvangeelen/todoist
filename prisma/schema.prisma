// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ============================================================
// AUTH (NextAuth.js adapter tables)
// ============================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================
// USERS
// ============================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  projects         Project[]
  tasks            Task[]
  labels           Label[]
  comments         Comment[]
  integrations     Integration[]
  emailSuggestions EmailSuggestion[]
  calendarEvents   CalendarEvent[]
  savedFilters     SavedFilter[]
}

// ============================================================
// PROJECTS & SECTIONS
// ============================================================

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#6366f1")
  icon        String?
  isArchived  Boolean  @default(false)
  isFavorite  Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  sections Section[]
  tasks    Task[]

  @@index([userId])
}

model Section {
  id        String   @id @default(cuid())
  name      String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tasks Task[]

  @@index([projectId])
}

// ============================================================
// TASKS
// ============================================================

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  isCompleted Boolean   @default(false)
  completedAt DateTime?
  priority    Int       @default(4) // 1=urgent, 2=high, 3=medium, 4=none
  dueDate     DateTime?
  dueTime     String?   // HH:MM format
  sortOrder   Int       @default(0)
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Recurring
  isRecurring         Boolean  @default(false)
  recurringPattern    String?  // "daily" | "weekly" | "monthly" | "yearly"
  recurringInterval   Int?
  recurringDaysOfWeek String?  // JSON: "[1,3,5]"
  recurringEndDate    DateTime?
  parentTaskId        String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  sectionId String?
  section   Section? @relation(fields: [sectionId], references: [id])
  parentTask Task?   @relation("RecurringTasks", fields: [parentTaskId], references: [id])
  childTasks Task[]  @relation("RecurringTasks")

  labels         TaskLabel[]
  comments       Comment[]
  calendarEvents CalendarEvent[]

  @@index([userId])
  @@index([projectId])
  @@index([dueDate])
  @@index([isCompleted])
}

// ============================================================
// LABELS
// ============================================================

model Label {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#6b7280")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks TaskLabel[]

  @@unique([userId, name])
  @@index([userId])
}

model TaskLabel {
  taskId  String
  labelId String
  task    Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  label   Label @relation(fields: [labelId], references: [id], onDelete: Cascade)

  @@id([taskId, labelId])
}

// ============================================================
// COMMENTS
// ============================================================

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([taskId])
}

// ============================================================
// INTEGRATIONS
// ============================================================

model Integration {
  id           String    @id @default(cuid())
  provider     String    // "google" | "microsoft" | "imap"
  email        String?
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  syncToken    String?   // For incremental calendar sync
  webhookId    String?   // Google/MS webhook channel id
  webhookExpiry DateTime?
  metadata     String?   // JSON string for extra config (IMAP host, port, etc.)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider, email])
  @@index([userId])
}

// ============================================================
// CALENDAR EVENTS
// ============================================================

model CalendarEvent {
  id           String   @id @default(cuid())
  externalId   String   // ID from Google/Microsoft
  provider     String   // "google" | "microsoft"
  title        String
  description  String?
  startAt      DateTime
  endAt        DateTime
  isAllDay     Boolean  @default(false)
  htmlLink     String?  // Link to event in calendar app
  syncedAt     DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  taskId String?
  task   Task?   @relation(fields: [taskId], references: [id])
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider, externalId])
  @@index([userId])
  @@index([startAt])
}

// ============================================================
// EMAIL SUGGESTIONS (AI-generated)
// ============================================================

model EmailSuggestion {
  id          String   @id @default(cuid())
  emailId     String?  // External email ID
  provider    String   // "google" | "microsoft" | "imap"
  subject     String?
  fromEmail   String?
  rawContent  String   // Original email text
  aiResponse  String   // JSON: array of suggested tasks
  status      String   @default("pending") // "pending" | "accepted" | "rejected" | "partial"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId String? // Link to created task if accepted

  @@index([userId])
  @@index([status])
}

// ============================================================
// SAVED FILTERS
// ============================================================

model SavedFilter {
  id        String   @id @default(cuid())
  name      String
  query     String   // JSON: filter criteria
  color     String   @default("#6b7280")
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
